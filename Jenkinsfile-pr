pipeline {
    agent any
    
    environment {
        ANDROID_NDK_HOME = '/opt/android/sdk/ndk/21.4.7075529'
        ANDROID_HOME = '/opt/android/sdk'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'bugtest', url: 'https://github.com/gubraun/lyra'
            }
        }
        stage('Capture Build') {
            steps {
                sh '/opt/coverity/bin/cov-run-desktop --build'
            }
        }
        stage('Coverity Analysis') {
            steps {
                sh '/opt/coverity/bin/cov-run-desktop --ignore-uncapturable-inputs true $(for f in $(git diff --name-only origin/bugtest..origin/main); do echo $(bazel info execution_root)/$f; done)'
            }
        }
    }
}
