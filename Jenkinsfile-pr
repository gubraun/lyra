pipeline {
    agent any
    
    environment {
        ANDROID_NDK_HOME = '/opt/android/sdk/ndk/21.4.7075529'
        ANDROID_HOME = '/opt/android/sdk'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/gubraun/lyra'
            }
        }
        stage('Load Build') {
            steps {
                copyArtifacts(projectName: 'lyra-full', filter: 'lyra-full.json');
                sh '/opt/coverity/bin/cov-manage-emit --dir idir import-json-build --input-file lyra-full.json'
            }
        }
        stage('Coverity Analysis') {
            steps {
                sh '/opt/coverity/bin/cov-run-desktop --disconnected lyra-encoder.cc'
            }
        }
    }
}
